<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codekul.interactivitycommunication.ProfileActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txUserName"
        android:layout_width="86dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="36dp" />


    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/grpDevices" />

    <RadioGroup
        android:id="@+id/grpDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/txUserName"
        app:layout_constraintTop_toBottomOf="@+id/txUserName">

        <RadioButton
            android:id="@+id/rbMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Mobile"
            app:layout_constraintStart_toStartOf="@+id/txUserName"
            app:layout_constraintTop_toBottomOf="@+id/txUserName" />

        <RadioButton
            android:id="@+id/rbRPI"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginTop="32dp"
            android:text="RPI"
            app:layout_constraintStart_toStartOf="@+id/rbMobile"
            app:layout_constraintTop_toBottomOf="@+id/rbMobile" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
